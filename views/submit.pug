extends layout


block content
  .container
    h2 #{title}
    form(method='POST',action='/submit')
      #form-group
        label Code:
        input.form-control(name='code', type='text')
      #form-group
        label Reported by:
        input.form-control(name='operator', type='text')
      #form-group
        label Description:
        textarea.form-control(name='description')
      #form-group
        label Solution:
        textarea.form-control(name='solution')
      #form-group
        label Cause:
        textarea.form-control(name='cause')
      #form-group
        label Long term effects:
        textarea.form-control(name='longtermeffects')
      #form-group
        label Date:
        input.form-control(name='date', type='date')#date
      #form-group
        label Time:
        input.form-control(name='time', type='time')#time
      #form-group
        label Duration (hours):
        input.form-control(name='duration', type='number', step=0.25, min=0)
      br
      input.btn.btn-primary.btn-lg(type='submit',value='Submit')
